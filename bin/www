'use strict';

require('coffee-script/register');
GLOBAL.config = require('config/config.coffee');
GLOBAL.runtime = require('config/runtime.js');
var log = config.logger('www');
var app = require('app.js');

app.set('port', config.server.port);

var server = app.listen(app.get('port'), function() {
  log.info('listening to port \x1b[34m' + server.address().port + '\x1b[39m');
});
